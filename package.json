{
  "name": "cnbeta-pwa",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "postinstall": "npm-run-all -p install:api install:web",
    "install:api": "cd api && npm install",
    "install:web": "cd web && npm install",
    "start": "npm-run-all -p start:api start:web",
    "start:api": "yarn --cwd api start ",
    "start:web": "yarn --cwd web start",
    "build:api": "cd api && npm run build && cd ..",
    "build:web": "cd web && yarn build",
    "publish": "npm run build:web && npm run start:api"
  },
  "engines": {
    "node": "8.x"
  },
  "dependencies": {
    "npm-run-all": "*"
  }
}
